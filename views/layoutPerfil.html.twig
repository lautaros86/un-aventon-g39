{% extends 'layout.html.twig' %}
{% block title %}
    UnAventon - Perfil
{% endblock %}


{% block contenido %}
    <div class="row">
        <div class="col-md-3">
            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="{% if session.get('usuario').foto %}{{session.get('usuario').foto}}{% else %}/img/anonimo.png{% endif %}" alt="User profile picture">
                    <h3 class="profile-username text-center"> {{session.get('usuario').nombre}} {{session.get('usuario').apellido}}</h3>
                    <p class="text-muted text-center">{{session.get('usuario').email}}</p>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Total de Viajes</b> <a class="pull-right">usuario.viajes.count</a>
                        </li>
                        <li class="list-group-item">
                            <b>Chofer</b> <a class="pull-right">usuario.viaje.chofer</a>
                        </li>
                        <li class="list-group-item">
                            <b>Pasajero</b> <a class="pull-right">usuario.viaje.pasajero</a>
                        </li>
                        <li class="list-group-item">
                            <b>Reputacion</b> <a class="pull-right">usuario.reputacion</a>
                        </li>
                    </ul>

                    <a class="btn btn-info btn-sm" href= "/usuario/editarPerfil">
                        <i class="fa fa-edit"></i> Editar
                    </a>

                    <a class="btn btn-danger btn-sm pull-right" id="cerrarCuenta" href= "/usuario/eliminarCuenta">
                        <i class="fa fa-trash-o"></i> Eliminar Cuenta
                    </a>
                    <br/>
                    <br/>
                    <a href="/viaje/alta" class="btn btn-success btn-block"><b>PUBLICAR VIAJE </b></a>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">

            {% block subContenido %}
            {% endblock %}

            <!-- /.col -->
        </div>
    </div>
{% endblock %}
{% block script %}
    {{parent()}}
    <script>
        $().ready(function () {
            $("#cerrarCuenta").click(function () {
                var ok = confirm("Seguro que desea elminar su cuenta?");
                if (ok) {
                    alert("Gracias por haber sido parte, esperamos vuelva pronto.");
                } else {
                    return false;
                }
            })
        });
    </script>
{% endblock %}
