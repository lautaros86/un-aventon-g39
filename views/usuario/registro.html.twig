{% extends 'layout.html.twig' %}

{% block style %}
    {{ parent() }}
    <!-- iCheck -->
    <link rel="stylesheet" href="../../bower_components/admin-lte/plugins/iCheck/square/blue.css">
    <link rel="stylesheet" href="../../bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
{% endblock %} 

{% block title %}Un Aventon - Registro{% endblock %} 
{% block menu %}            
{% endblock %}
{% block contenido %}  
    <div class="register-box">
        <div class="register-logo">
            <a href="/">Un<b>Aventon</b></a>
        </div>

        <div class="register-box-body">
            <p class="login-box-msg">Registrar nuevo usuario</p>

            <form action="/usuario/crear" method="post">
                <div class="form-group {% if errors.nombre is defined  %}has-error{% endif %}">
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre" {% if form is defined  %}value="{{form.nombre}}"{% endif %}>
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    {% if errors.nombre is defined %}
                        {% for err_msg in errors.nombre %}
                            <span class="help-block">{{err_msg}}</span>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="form-group {% if errors.apellido is defined  %}has-error{% endif %}">
                    <input type="text" class="form-control" name="apellido" placeholder="Apellido" {% if form is defined  %}value="{{form.apellido}}"{% endif %}>
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    {% if errors.apellido is defined %}
                        {% for err_msg in errors.apellido %}
                            <span class="help-block">{{err_msg}}</span>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="form-group {% if errors.fecha_nac is defined  %}has-error{% endif %}">
                    <input type="text" class="form-control" name="fecha_nac" id="fecha_nac" {% if form is defined  %}value="{{form.fecha_nac}}"{% endif %}
                           placeholder="Fecha de Nacimiento">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    {% if errors.fecha_nac is defined %}
                        {% for err_msg in errors.fecha_nac %}
                            <span class="help-block">{{err_msg}}</span>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="form-group {% if errors.email is defined  %}has-error{% endif %}">
                    <input type="email" class="form-control" name="email" placeholder="Email" {% if form is defined  %}value="{{form.email}}"{% endif %}>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    {% if errors.email is defined %}
                        {% for err_msg in errors.email %}
                            <span class="help-block">{{err_msg}}</span>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="form-group {% if errors.pass is defined  %}has-error{% endif %}">
                    <input type="password" class="form-control" name="pass" placeholder="Contraseña" {% if form is defined  %}value="{{form.pass}}"{% endif %}>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    {% if errors.pass is defined %}
                        {% for err_msg in errors.pass %}
                            <span class="help-block">{{err_msg}}</span>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="form-group {% if errors.repass is defined  %}has-error{% endif %}">
                    <input type="password" class="form-control" name="repass" placeholder="Repetir contraseña">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                    {% if errors.repass is defined %}
                        {% for err_msg in errors.repass %}
                            <span class="help-block">{{err_msg}}</span>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="form-group {% if errors.terminos is defined  %}has-error{% endif %}">

                            <div class="checkbox icheck ">
                                <label>
                                    <input name="terminos" type="checkbox"> <small>Eh leido y acepto los <a href="https://es.lipsum.com/feed/html">terminos y condiciones</a></small>
                                    {% if errors.terminos is defined %}
                                        {% for err_msg in errors.terminos %}
                                            <span class="help-block">{{err_msg}}</span>
                                        {% endfor %}
                                    {% endif %}
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" id="submitRegistro" class="btn btn-primary btn-block btn-flat">Registrar</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <a href="/login" class="text-center">Ya tengo una cuenta</a>
            <a href="/" class="text-center pull-right">Volver a la pagina Principal</a>
        </div>
        <!-- /.form-box -->
    </div>
    <!-- /.register-box -->

    {% block script %}
        {{ parent() }}
        <!-- iCheck -->
        <script src="../../bower_components/admin-lte/plugins/iCheck/icheck.min.js"></script>
        <script src="../../bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
        <script src="../../bower_components/bootstrap-datepicker/dist/locales/bootstrap-datepicker.es.min.js"></script>

        <script>
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' /* optional */
                });
                $('#fecha_nac').datepicker({
                    autoclose: true,
                    language: 'es'
                });
            });
        </script>
    {% endblock %}            

{% endblock %}                
