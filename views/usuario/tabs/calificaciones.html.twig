<!-- Post -->
<div class="notificaciones">
    <h3>Calificaciones pendientes</h3>
    <hr>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>NÂº</th>
                    <th>Viaje</th>
                    <th>Calificado</th>
                    <th>Acciones</th>
                    <th>Comentarios</th>
                </tr>
            </thead>
            <tbody>
                {% for calificacion in calificaciones %}
                    <tr>
                        <td>{{calificacion.id}}</td>
                        <td>{{calificacion.id_viaje}}</td>
                        <td>{{calificacion.id_calificado}}</td>
                        <td>
                            {% if calificacion.calificacion == 0 %}
                                <button class="btn btn-success calificarBien"  data-calificacion="/usuario/calificar/{{calificacion.id}}/positivo">+1</button>
                                <button class="btn btn-danger calificarMal"  data-calificacion="/usuario/calificar/{{calificacion.id}}/negativo">-1</button>
                            {% else%}
                                {{calificacion.calificacion}}
                            {% endif %}
                        </td>
                        <td>
                            {% if calificacion.calificacion == 0 %}
                            <input type="textarea" class="form-control" name="comentario" placeholder="Comentario">
                            {% if errors.nombre is defined %}
                                {% for err_msg in errors.nombre %}
                                    <span class="help-block">{{err_msg}}</span>
                                {% endfor %}
                            {% endif %}
                            {% else%}
                                {{calificacion.comentario}}                            
                            {% endif %}                            
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>            
    </div>
</div>