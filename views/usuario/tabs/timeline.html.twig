<!-- The timeline -->
<ul class="timeline timeline-inverse">
    <!-- timeline time label -->
    <li class="time-label">
        <span class="bg-red">
            Historial de viajes
        </span>
    </li>
    {% for viaje in viajes %}
        <!-- /.timeline-label -->
        <!-- timeline item -->
        <li class="time-label">
            <span class="bg-green">
                {{viaje.fecha | date("d/m/Y")}}
            </span>
        </li>
        <li>
            <i class="fa fa-car bg-blue"></i>

            <div class="timeline-item">
                <span class="time"><i class="fa fa-clock-o"></i> {{viaje.hora}}</span>

                <h3 class="timeline-header"><a href="#">Tu conductor fue: </a>{{viaje.nombre }} {{viaje.apellido}}</h3>

                <div class="timeline-body">
                    <strong>Viajeste a:</strong> {{viaje.destino}} 
                    <br>
                    <strong>Desde:</strong> {{viaje.origen}} 
                    <br>
                    <strong>Abonando:</strong> {{viaje.monto}}$ 
                </div>
            </div>
        </li>
    {% endfor %}
    <li>
        <i class="fa fa-clock-o bg-gray"></i>
    </li>
</ul>