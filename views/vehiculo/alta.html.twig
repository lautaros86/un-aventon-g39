


{% extends 'layout.html.twig' %}
{% block title %}
    UnAventon - Perfil
{% endblock %}


{% block contenido %}
    <div class="row">
        <div class="col-md-3">
            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="../../img/anonimo.png" alt="User profile picture">
                    <h3 class="profile-username text-center"> {{usuario.nombre}} {{usuario.apellido}}</h3>
                    <p class="text-muted text-center">{{usuario.email}}</p>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Total de Viajes</b> <a class="pull-right">usuario.viajes.count</a>
                        </li>
                        <li class="list-group-item">
                            <b>Chofer</b> <a class="pull-right">usuario.viaje.chofer</a>
                        </li>
                        <li class="list-group-item">
                            <b>Pasajero</b> <a class="pull-right">usuario.viaje.pasajero</a>
                        </li>
                        <li class="list-group-item">
                            <b>Reputacion</b> <a class="pull-right">usuario.reputacion</a>
                        </li>
                    </ul>

                    <div class ="pull-right">
                        <a class="btn btn-default btn-sm">
                            <i class="fa fa-edit"></i> Editar
                        </a>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="box box-default">
                <p class="login-box-msg">Registrar nuevo vehiculo</p>

                <form action="/vehiculo/crear" method="post">
                    <div class="form-group {% if errors.marca is defined  %}has-error{% endif %}">
                        <input type="text" class="form-control" name="marca" placeholder="Marca" {% if form is defined  %}value="{{form.marca}}"{% endif %}>
                        {% if errors.marca is defined %}
                            {% for err_msg in errors.marca %}
                                <span class="help-block">{{err_msg}}</span>
                            {% endfor %}
                        {% endif %}
                    </div>
                    <div class="form-group {% if errors.modelo is defined  %}has-error{% endif %}">
                        <input type="text" class="form-control" name="modelo" placeholder="modelo" {% if form is defined  %}value="{{form.modelo}}"{% endif %}>
                        {% if errors.modelo is defined %}
                            {% for err_msg in errors.modelo %}
                                <span class="help-block">{{err_msg}}</span>
                            {% endfor %}
                        {% endif %}
                    </div>
                    <div class="form-group {% if errors.patente is defined  %}has-error{% endif %}">
                        <input type="patente" class="form-control" name="patente" placeholder="Patente" {% if form is defined  %}value="{{form.patente}}"{% endif %}>
                        {% if errors.patente is defined %}
                            {% for err_msg in errors.patente %}
                                <span class="help-block">{{err_msg}}</span>
                            {% endfor %}
                        {% endif %}
                    </div>
                    <div class="form-group {% if errors.asientos is defined  %}has-error{% endif %}">
                        <input type="text" class="form-control" name="asientos" id="asientos" {% if form is defined  %}value="{{form.asientos}}"{% endif %}
                               placeholder="Ingrese cantidad de Asientos">
                        {% if errors.asientos is defined %}
                            {% for err_msg in errors.asientos %}
                                <span class="help-block">{{err_msg}}</span>
                            {% endfor %}
                        {% endif %}
                    </div>

                    <div class="row">
                        <div class="col-xs-8">
                            <div class="form-group {% if errors.repass is defined  %}has-error{% endif %}">

                                <div class="checkbox icheck ">
                                    <label>
                                        <input name="baul" type="checkbox" 
                                               {% if form is defined %}
                                                   {% if form.baul==1%}
                                                       checked
                                                   {% endif %}
                                               {% endif %} >
                                        <label>Cuento con baúl </label>
                                      {#  <input name="baul" type="checkbox"> <label>Cuento con baúl </label>#}

                                        {% if errors.baul is defined %}
                                            {% for err_msg in errors.terminos %}
                                                <span class="help-block">{{err_msg}}</span>
                                            {% endfor %}
                                        {% endif %}
                                    </label>
                                </div>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-4">
                            <button type="submit" id="submitRegistro" class="btn btn-primary btn-block btn-flat">Registrar</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>

        </div>
    </div>
{% endblock %}


{% block script %}
    {{parent()}}
    <script>
        $().ready(function () {

            $(".edit").click(function (event) {
                var elem = $(event.target);
                if (elem.is("i")) {
                    elem = $(elem.parent());
                }
                console.log(elem.data("id"))
                alert("Modificar vehiculo con id: " + elem.data("id"));
            });
            $(".remove").click(function (event) {
                ok = confirm("¿Esta seguro que desea eliminar este vehiculo?");
                if (ok) {
                    var elem = $(event.target);
                    if (elem.is("i")) {
                        elem = $(elem.parent());
                    }
                    alert("Eliminar vehiculo con id: " + elem.data("id"));
                } else {
                    alert("Pedido cancelado");
                }
            });
        });
    </script>
{% endblock %}